<!DOCTYPE html>
<html>

  <head>
    <% include partials/head %>
    <script src="/js/lib/angular.min.js"></script>
  </head>

  <body>

    <nav class="bg-white sil-green flex flex-baseline px3 py2 border-bottom">
      <div class="flex-auto">Silent</div>
      <div class="right-align">
        Have an account? <a href="/login" class="sil-underline">Login</a>
      </div>
    </nav>

    <div class="sil-absolute-center absolute sm-col sm-col-6 md-col-4 lg-col-3 ">
      <div class="h1 sil-green mb1">Join Silent</div>
      <div class="h5 gray">Let your presence speak loudly</div>
      <form class="mt2 mb2" action="/signup" method="post">
        <div class="mt2 mb2">
          <input class="field col-12" type="text" name="username" placeholder="username"/>
        </div>
        <div class="mt2 mb2">
          <input class="field col-12" type="password" name="password" placeholder="password"/>
        </div>
        <!--
        <div class="mt2 mb2">
          <input class="field col-12" type="password" name="confirm" placeholder="confirm password"/>
        </div>
        -->
        <div class="mt2 mb2">
          <input class="btn sil-bg-green btn-primary col-12 p1" type="submit" value="Sign Up"/>
        </div>
      </form>
      <hr class="mt2 mb2">
      <div class="mt2 mb2">
        <input class="btn btn-primary col-12 p1" type="submit" value="Sign Up via Facebook"/>
      </div>
    </div>

  </body>

</html>

