<!DOCTYPE html>
<html ng-app="Silent">

  <head>
    <% include partials/head %>
    <% include partials/mobile %>
  </head>
  
  <body class="bg-darken-1" ng-controller="RoomController">

    <!-- get modals ready -->

    <sil-modal show="showShareModal">
      <sil-share-modal></sil-share-modal>
    </sil-modal>

    <sil-modal show="showUserPageModal">
      <sil-user-page-modal></sil-user-page-modal>
    </sil-modal>

    <sil-modal show="showLoginModal">
      <sil-login-modal></sil-login-modal>
    </sil-modal>

    <sil-modal show="showSignupModal">
      <sil-signup-modal></sil-signup-modal>
    </sil-modal>

    <sil-modal show="showJoinRoomModal">
      <sil-join-room-modal></sil-join-room-modal>
    </sil-modal>

    <nav class="sil-room-nav sil-screen-px bg-white sil-green flex fixed sil-shadow" >
      <!-- LHS: ROOM NAME-->
      <div class="left">
        <div class="sil-room-name bold h3" ng-click="roomInfo()">@{{ room }}</div>
        <div class="sil-room-info-wrapper sil-fill-width absolute" ng-click="roomInfo()" ng-show="showRoomInfo">
          <div class="sil-room-info bg-white center rounded">
            <div class="inline-block col-2 px1 py2">{{ activeGuests || 0 }}<div class="">guests</div></div>
            <div class="inline-block col-2 px2 py2">{{ activeUsers || 0 }}<div class="">active</div></div>
            <div class="inline-block col-2 px1 py2">{{ totalUsers || 0 }}<div class="">total</div></div>
          </div>
        </div>
      </div>

      <!-- MIDDLE: credentials -->
      <div class="sil-nav-options right-align">
        <div class="inline-block ml1 relative" ng-show="authenticated">
          
          <div class="sil-display-image absolute inline-block border circle blue"></div>
          <div class="sil-nav-option sil-pointer center p1" ng-click="openUserPageModal()">
            {{ displayName }}
          </div>
        </div>
        <div class="inline-block ml1" ng-hide="authenticated">
          <div class="sil-nav-option sil-pointer center p1" ng-click="openCredentialsModal()">signin</div>
        </div>
      </div>
    </nav>

    <div class="sil-room-tabs flex flex-wrap clearfix m2 sil-justify-center" ng-controller="UserListController">

      <!-- user tabs -->
      <sil-join-tab class="sil-pointer" ng-click="openJoinRoomModal()" ng-hide="authenticated"></sil-join-tab>
      <sil-my-user-tab class="sil-pointer" ng-show="authenticated"></sil-my-user-tab>
      <sil-user-tab ng-repeat="user in activeUsers" info="user" class="sil-pointer"></sil-user-tab>
      <sil-user-tab class="muted sil-pointer" ng-repeat="user in inactiveUsers" info="user"></sil-user-tab>

    </div>

    <% include partials/scripts %>

  </body>
</html>
